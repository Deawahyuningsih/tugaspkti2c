// Fungsi untuk membuat bukti transfer
function generateBuktiTransfer(data) {
  const container = document.getElementById('receipt-container');
  container.innerHTML = `
    <h2>Bukti Transfer</h2>
    <p><strong>Tanggal:</strong> ${data.tanggal}</p>
    <p><strong>Waktu:</strong> ${data.waktu}</p>
    <p><strong>Nama Pengirim:</strong> ${data.pengirim}</p>
    <p><strong>Bank Pengirim:</strong> ${data.bankPengirim}</p>
    <p><strong>Nama Penerima:</strong> ${data.penerima}</p>
    <p><strong>Bank Penerima:</strong> ${data.bankPenerima}</p>
    <p><strong>Nomor Rekening Penerima:</strong> ${data.noRekening}</p>
    <p><strong>Jumlah Transfer:</strong> Rp ${data.jumlah.toLocaleString('id-ID')}</p>
    <p><strong>Berita:</strong> ${data.berita}</p>
    <p><strong>Status:</strong> ${data.status}</p>
  `;
}

// Contoh data transaksi
const dataTransaksi = {
  tanggal: '07-05-2025',
  waktu: '14:37:33',
  pengirim: 'Andi Saputra',
  bankPengirim: 'Bank ABC',
  penerima: 'Budi Santoso',
  bankPenerima: 'Bank XYZ',
  noRekening: '1234567890',
  jumlah: 1500000,
  berita: 'Pembayaran Invoice #1234',
  status: 'Berhasil'
};

// Tampilkan bukti transfer saat halaman dimuat
generateBuktiTransfer(dataTransaksi);
